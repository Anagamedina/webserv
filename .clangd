CompileFlags:
  Add:
    - -I/path/to/your/project/lib/catch2
    - "-std=c++98"
    - "-xc++"
    - "-Wall"
    - "-Wextra"
    - "-Werror"
  Remove: [-I.*catch.*]  # Remove any system catch includes
  # Use the compile_commands.json from the build directory
  CompilationDatabase: build-cmake

# Completion configuration
Completion:
  EnableFunctionArgPlaceholders: true

# Diagnostics configuration  
Diagnostics:
  UnusedIncludes: Strict
  MissingIncludes: Warning
  
# Index configuration
Index:
  Background: Build
  StandardLibraryMapping:
    stdlibcpp: /usr/include/c++/13  # Adjust to your GCC version if needed

